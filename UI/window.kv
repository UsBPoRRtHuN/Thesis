#:kivy 1.0.9
Window:

<DataTextInput@TextInput>:
    multiline: False
    disabled: True
    cursor_blink: 1
    opacity: 0
    input_filter: 'int'
    font_size: 10
    size_hint: 2,1

<Window>:
    BoxLayout:
        size: root.width, root.height * 0.15
        orientation: "horizontal"
        top: root.top
        BoxLayout:
            canvas:
                Line:
                    points: (0, root.height-(self.height*1.01), root.width, root.height-(self.height*1.01))
                    width: 0.5
                Line:
                    points: (root.width/2.5, (root.height*0.85), root.width/2.5, root.height)
                    width: 0.5
            size_hint: 1/3, 1
            orientation: "vertical"
            ToggleButton:
                font_size: 10
                text: "Options..."
                on_state: app.optionstogglebutton(self)
            DataTextInput:
                id: AreaInput
                hint_text: "Area..."
                on_text_validate: app.areavalidate(self)
            DataTextInput:
                id: LevelsInput
                font_size: 10
                hint_text: "Number of levels..."
                on_text_validate: app.levelsvalidate(self)
        Button:
            text: "Exit..."
            font_size: 10
            size_hint: 1/3, 1/3
            pos_hint: {"top": 1}
            on_release: app.stop()
        Label:
            font_size: 20
            size_hint: 1, 1
            text: "Layout Generator Software"
    BoxLayout:
        size: root.width, root.height * 0.1
        orientation: "horizontal"
        top: root.top - root.height*0.9
        canvas:
            Line:
                points: (0, root.height-(root.height*0.9), root.width, root.height-(root.height*0.9))
                width: 0.5
        Button:
            text: "<----"
        BoxLayout:
            orientation: "vertical"
            Button:
                id: GenerateButton
                background_color: "red"
                text: "Generate"
                on_press: app.generateWidgets()
        Button:
            text: "---->"
    BoxLayout:
        size: root.width, root.height * 0.1
        orientation: "horizontal"
        top: root.top - root.height * 0.155
        Button:
            on_press: app.layoutBack(layoutarea)
            text: "<----"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Current layout is: "
            Label:
                text: "#"
                id: currentLayoutLabel
            Label:
                text: "No of available Unit Groups per level :"
            Label:
                text: "#"
                id: numberOfLayoutsLabel
        Button:
            on_press: app.layoutForward(layoutarea)
            text:"---->"
    BoxLayout:
        size: root.width, root.height * 0.65
        top: root.top - root.height * 0.25
        orientation: "horizontal"
        PageLayout:
            id: layoutarea
            border: 0
            #Button:
                #text: "layout area"
                #background_color: (0.2, 0.5, 0.76, 1.0)
            #Button:
                #text: "layout area 2"
                #background_color: (0.8, 0.1, 0.6, 1.0)
            #Button:
                #text: "layout area 3"
                #background_color: (0.2, 0.6, 0.1, 1.0)

