#:kivy 1.0.9
Window:

<Window>:
    BoxLayout:
        size: root.width, root.height * 0.15
        orientation: "horizontal"
        top: root.top
        BoxLayout:
            canvas:
                Line:
                    points: (0, root.height-(self.height*1.01), root.width, root.height-(self.height*1.01))
                    width: 0.5
            size_hint: 1/3, 1
            orientation: "vertical"
            ToggleButton:
                font_size: 10
                text: "Options..."
            TextInput:
                opacity: 1
                size_hint: 2, 1
                hint_text: "Area..."
            TextInput:
                opacity: 1
                font_size: 10
                size_hint: 2,1
                hint_text: "Number of levels..."
        Button:
            text: "Exit..."
            font_size: 10
            size_hint: 1/3, 1/3
            pos_hint: {"top": 1}
        Label:
            size_hint: 1, 1
            text: "Layout Generator Software"
    BoxLayout:
        size: root.width, root.height * 0.15
        orientation: "horizontal"
        top: root.top - root.height*0.85
        canvas:
            Line:
                points: (0, root.height-(root.height*0.85), root.width, root.height-(root.height*0.85))
                width: 0.5
        Button:
            text: "<----"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Current level is:"
            Label:
                text: "#"
        Button:
            text: "---->"
    BoxLayout:
        size: root.width, root.height * 0.1
        orientation: "horizontal"
        top: root.top - root.height * 0.16
        Button:
            text: "<----"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Current layout is: "
            Label:
                text: "#"
        Button:
            text:"---->"

