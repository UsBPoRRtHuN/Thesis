#:kivy 1.0.9
#:import Factory kivy.factory.Factory

<MyButton@Button>:
    size_hint: [None, None]
    size: [100, 20]

<MyToggleButton@ToggleButton>:
    size_hint: [None, None]
    size: [100, 20]

<DataTextInput@TextInput>:
    font_size: 12
    size: [60,20]
    multiline: False
    disabled: False
    cursor_blink: 1
    opacity: 0
    input_filter: 'int'
    on_text_validate: app.process()
    on_focus: self.text = ""

<Window>:
    BoxLayout:
        top: root.top
        orientation: 'vertical'
        MyToggleButton:
            id: ToggleButton
            text: 'Options...'
            on_state:
                if self.state == "down": \
                app.show()
                if self.state == "normal": \
                app.hide()
        DataTextInput:
            text: 'Enter the area...'
            id: BaseAreaTextInput
            on_text_validate: app.process()
                focus_next: LevelsTextInput
            on_focus: self.text = ""
        DataTextInput:
            text: "No of levels..."
            id: LevelsTextInput
            on_text_validate: app.process()
            on_focus: self.text = ""
    MyButton:
        top:root.top
        x: root.x + 100
        text: "Exit..."
        on_release: app.stop()
    Label:
        top:root.top
        x: root.x+340
        text: "Generator Test Software"
        font_size: 25